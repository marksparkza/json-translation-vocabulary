{
    "title": "A meta-schema describing the syntax of the JSON translation vocabulary",
    "$id": "https://jschon.dev/ext/translation/vocab",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$vocabulary": {
        "https://jschon.dev/ext/translation": true
    },
    "$dynamicAnchor": "meta",
    "type": ["object", "boolean"],
    "properties": {
        "translations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "t9nScheme": {
                        "type": "string"
                    },
                    "t9nTarget": {
                        "type": "string",
                        "format": "json-pointer"
                    },
                    "t9nRule": {
                        "$dynamicRef": "#t9n-rule"
                    }
                },
                "required": [
                    "t9nScheme",
                    "t9nTarget",
                    "t9nRule"
                ]
            }
        }
    },
    "$defs": {
        "t9nRuleSchema": {
            "$dynamicAnchor": "t9n-rule",
            "type": "object",
            "properties": {
                "t9nTargetInit": true,
                "t9nTargetType": {
                    "enum": [
                        "null",
                        "boolean",
                        "integer",
                        "number",
                        "string",
                        "array",
                        "object"
                    ]
                },
                "t9nSourceProperty": {
                    "type": "string"
                },
                "t9nSourceProperties": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "t9nSourcePropertiesSeparator": {
                    "type": "string"
                },
                "t9nFilter": {
                    "type": "string"
                },
                "t9nMap": {
                    "type": "object"
                },
                "t9nItems": {
                    "$dynamicRef": "#t9n-rule"
                },
                "t9nProperties": {
                    "type": "object",
                    "additionalProperties": {
                        "$dynamicRef": "#t9n-rule"
                    }
                }
            }
        }
    }
}
