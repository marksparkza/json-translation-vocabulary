{
    "title": "A meta-schema describing the syntax of the JSON translation vocabulary",
    "$id": "https://jschon.dev/ext/translation/vocab",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$vocabulary": {
        "https://jschon.dev/ext/translation": true
    },
    "$dynamicAnchor": "meta",
    "type": ["object", "boolean"],
    "properties": {
        "translations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "t9nScheme": {
                        "type": "string"
                    },
                    "t9nTarget": {
                        "type": "string",
                        "format": "json-pointer"
                    }
                },
                "required": ["t9nScheme", "t9nTarget"],
                "$dynamicRef": "#t9n-value"
            }
        }
    },
    "$defs": {
        "t9nValueSchema": {
            "$dynamicAnchor": "t9n-value",
            "type": "object",
            "properties": {
                "t9nConst": true,
                "t9nSource": {
                    "type": ["string", "array"],
                    "items": {
                        "type": "string"
                    }
                },
                "t9nSeparator": {
                    "type": "string"
                },
                "t9nFilter": {
                    "type": ["string", "object"]
                },
                "t9nCast": {
                    "enum": ["boolean", "integer", "number", "string"]
                },
                "t9nArray": {
                    "$dynamicRef": "#t9n-value"
                },
                "t9nObject": {
                    "type": "object",
                    "additionalProperties": {
                        "$dynamicRef": "#t9n-value"
                    }
                }
            }
        }
    }
}
