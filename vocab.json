{
    "title": "A meta-schema describing the syntax of the JSON translation vocabulary",
    "$id": "https://jschon.dev/ext/translation/vocab",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$vocabulary": {
        "https://jschon.dev/ext/translation": true
    },
    "$dynamicAnchor": "meta",
    "type": ["object", "boolean"],
    "properties": {
        "translations": {
            "type": "array",
            "items": {
                "$dynamicAnchor": "t9n-schema",
                "type": "object",
                "properties": {
                    "t9nScheme": {
                        "type": "string"
                    },
                    "t9nTarget": {
                        "type": "string",
                        "format": "json-pointer"
                    },
                    "t9nConst": true,
                    "t9nType": {
                        "enum": ["null", "boolean", "integer", "number", "string", "array", "object"]
                    },
                    "t9nSource": {
                        "type": ["string", "array"],
                        "items": {
                            "type": "string"
                        }
                    },
                    "t9nSeparator": {
                        "type": "string"
                    },
                    "t9nFilter": {
                        "type": "string"
                    },
                    "t9nMap": {
                        "type": "object"
                    },
                    "t9nArray": {
                        "$dynamicRef": "#t9n-schema"
                    },
                    "t9nObject": {
                        "type": "object",
                        "additionalProperties": {
                            "$dynamicRef": "#t9n-schema"
                        }
                    }
                }
            }
        }
    }
}
